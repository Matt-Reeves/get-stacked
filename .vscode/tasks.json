{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Debug",
            "command": "/usr/bin/clang++",
           "args": [
                "-std=c++17",
                "-O3",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-I",
                "${workspaceFolder}/headers",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/game",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++"
        }
    ],
    "version": "2.0.0"
}